<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaAlarmaMovil.MainPage">
    <Grid RowDefinitions="*,Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout 
                Padding="30,0"
                Spacing="25">
                <Image
                    Source="super_reminder.jpg"
                    HeightRequest="185"
                    Aspect="AspectFit"
                    SemanticProperties.Description="dot net bot in a race car number eight" />
                <Label
                    Text="Sistema de Alarmas Médicas"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1" />
                <Button
                    x:Name="btnActualizarPaciente"
                    Text="Datos Personales"
                    SemanticProperties.Hint="Navegar a Actualizar Paciente"
                    Clicked="OnActualizarPacienteClicked"
                    HorizontalOptions="Fill" />
                <Button
                    x:Name="btnOrdenesMedicas"
                    Text="Órdenes Médicas"
                    SemanticProperties.Hint="Navegar a Órdenes Médicas"
                    Clicked="OnOrdenesMedicasClicked"
                    HorizontalOptions="Fill"
                    IsEnabled="False" />
            </VerticalStackLayout>
        </ScrollView>
        <Button
            Grid.Row="1"
            x:Name="btnLogout"
            Text="Cerrar Sesión"
            Clicked="OnLogoutClicked"
            HorizontalOptions="Fill"
            Margin="30,0,30,30" />
    </Grid>
</ContentPage>