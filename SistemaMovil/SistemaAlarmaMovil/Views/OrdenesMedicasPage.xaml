<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:SistemaAlarmaMovil.Converters"
             x:Class="SistemaAlarmaMovil.Views.OrdenesMedicasPage"
             Title="Órdenes Médicas">
    <ContentPage.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </ContentPage.Resources>
    <ScrollView>
        <StackLayout Padding="20">

            <ActivityIndicator IsRunning="{Binding IsBusy}" 
                              IsVisible="{Binding IsBusy}" 
                              HorizontalOptions="Center"/>

            <CollectionView ItemsSource="{Binding Ordenes}"
                           EmptyView="No hay órdenes médicas disponibles">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5" 
                               Padding="10" 
                               BorderColor="Gray" 
                               CornerRadius="5">
                            <StackLayout>
                                <Label Text="{Binding Medico.NombreCompleto, StringFormat='Médico: {0}'}" 
                                       FontAttributes="Bold" 
                                       FontSize="16"/>
                                <Label Text="{Binding Medico.Especialidad.Nombre, StringFormat='Especialidad: {0}'}" 
                                       TextColor="Gray"/>
                                <Label Text="{Binding Fecha, StringFormat='Fecha: {0:dd/MM/yyyy}'}" 
                                       TextColor="Gray"/>
                                <Label Text="Farmacos:" 
                                       TextColor="Gray"/>
                                <CollectionView ItemsSource="{Binding LineaOrdenMedica}"
                                             Margin="10,0,0,0">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Label Text="{Binding Nombre}"
                                                   TextColor="Gray"/>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                                <Grid>
                                    <Label Text="Recibida: SI" 
                                           TextColor="Green"
                                           IsVisible="{Binding EntregadaAlPaciente}"/>
                                    <Button 
                                        Text="Recibir"
                                        IsVisible="{Binding EntregadaAlPaciente, Converter={StaticResource InverseBoolConverter}}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RecibirOrdenCommand}"
                                        CommandParameter="{Binding .}">
                                        <Button.Triggers>
                                            <DataTrigger TargetType="Button" Binding="{Binding EntregadaAlPaciente}" Value="True">
                                                <Setter Property="Text" Value="Ver" />
                                                <Setter Property="IsVisible" Value="True" />
                                            </DataTrigger>
                                        </Button.Triggers>
                                    </Button>
                                </Grid>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>