@model FarmacoViewModel
@{
    ViewData["Title"] = "Farmacos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Lista de Farmacos</span></h5>
        </div>
    </div>
    <div class="row px-xl-5 mb-1 justify-content-end">
        <div class="col">
            <div class="input-group">
                <input type="text" id="searchText" class="form-control" placeholder="Buscar por Nombre">
                <div class="input-group-append">
                    <span id="searchInput" class="input-group-text bg-transparent text-primary">
                        <i class="fa fa-search"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="row px-xl-5">
        <div class="col table-responsive mb-5">
            <div id="searchResults">
                <table id="farmacoTable" class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>N° Registro</th>
                            <th>Nombre</th>
                            <th>Laboratorio</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @foreach (var item in Model.Farmacos)
                        {
                            <tr>
                                <td class="align-middle">@item.NRegistro</td>
                                <td class="align-middle">@item.Nombre</td>
                                <td class="align-middle">@item.LabTitular</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        ConfigDataTableGlobal("farmacoTable");

        $("#searchInput").on("click", function () {
            var searchQuery = $("#searchText").val();
            
            if (searchQuery.trim() !== "") {
                var redirectUrl = "/Farmaco/Index/?nombre=" + encodeURIComponent(searchQuery);
                window.location.href = redirectUrl;
            }
        });
    });
</script>
