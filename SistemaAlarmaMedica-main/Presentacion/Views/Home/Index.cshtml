@{
    ViewData["Title"] = "Inicio - Sistema Rimander";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-12">
                <div class="hero-content">
                    <h1 class="display-3 fw-bold mb-4 animate-fade-in">
                        Gestión Médica <span class="text-primary">Inteligente</span>
                    </h1>
                    <p class="lead mb-4 animate-fade-in-delay mx-auto" style="max-width: 700px;">
                        Sistema integral para el control y seguimiento de tratamientos médicos,
                        órdenes y pacientes. Digitaliza tu práctica médica con Super Reminder.
                    </p>
                    <div class="hero-buttons animate-fade-in-delay-2">
                        <a asp-controller="Paciente" asp-action="Index" class="btn btn-primary btn-lg me-3 mb-2">
                            <i class="fas fa-users"></i> Gestionar Pacientes
                        </a>
                        <a asp-controller="Home" asp-action="Nosotros" class="btn btn-outline-light btn-lg mb-2">
                            <i class="fas fa-info-circle"></i> Conocer Más
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">Funcionalidades Principales</h2>
            <p class="text-muted lead">Todo lo que necesitas para gestionar tu práctica médica</p>
        </div>
        <div class="row g-4">
            <!-- Feature 1 -->
            <div class="col-lg-3 col-md-6">
                <div class="feature-card card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-user-injured fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title fw-bold">Gestión de Pacientes</h5>
                        <p class="card-text text-muted">
                            Administra fichas médicas, historiales y datos de contacto de tus pacientes.
                        </p>
                        <a asp-controller="Paciente" asp-action="Index" class="btn btn-outline-primary btn-sm">
                            Ver más <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Feature 2 -->
            <div class="col-lg-3 col-md-6">
                <div class="feature-card card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-user-md fa-3x text-success"></i>
                        </div>
                        <h5 class="card-title fw-bold">Registro de Médicos</h5>
                        <p class="card-text text-muted">
                            Mantén un directorio completo de médicos con especialidades y datos de contacto.
                        </p>
                        <a asp-controller="Medico" asp-action="Index" class="btn btn-outline-success btn-sm">
                            Ver más <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Feature 3 -->
            <div class="col-lg-3 col-md-6">
                <div class="feature-card card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-pills fa-3x text-danger"></i>
                        </div>
                        <h5 class="card-title fw-bold">Control de Fármacos</h5>
                        <p class="card-text text-muted">
                            Base de datos completa de medicamentos con información detallada.
                        </p>
                        <a asp-controller="Farmaco" asp-action="Index" class="btn btn-outline-danger btn-sm">
                            Ver más <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Feature 4 -->
            <div class="col-lg-3 col-md-6">
                <div class="feature-card card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-file-medical fa-3x text-warning"></i>
                        </div>
                        <h5 class="card-title fw-bold">Órdenes Médicas</h5>
                        <p class="card-text text-muted">
                            Crea y gestiona órdenes médicas con seguimiento de tratamientos.
                        </p>
                        <a asp-controller="OrdenMedica" asp-action="Index" class="btn btn-outline-warning btn-sm">
                            Ver más <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How it Works Section -->
<section class="how-it-works-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">¿Cómo Funciona?</h2>
            <p class="text-muted lead">Simplifica tu flujo de trabajo en 4 pasos</p>
        </div>
        <div class="row g-4">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="step-circle mx-auto mb-3">
                    <span class="step-number">1</span>
                </div>
                <h5 class="fw-bold">Registra Pacientes</h5>
                <p class="text-muted small">Carga los datos básicos de tus pacientes</p>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="step-circle mx-auto mb-3">
                    <span class="step-number">2</span>
                </div>
                <h5 class="fw-bold">Asigna Médicos</h5>
                <p class="text-muted small">Vincula pacientes con sus médicos tratantes</p>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="step-circle mx-auto mb-3">
                    <span class="step-number">3</span>
                </div>
                <h5 class="fw-bold">Crea Órdenes</h5>
                <p class="text-muted small">Genera órdenes médicas con tratamientos</p>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="step-circle mx-auto mb-3">
                    <span class="step-number">4</span>
                </div>
                <h5 class="fw-bold">Haz Seguimiento</h5>
                <p class="text-muted small">Monitorea el progreso de los tratamientos</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5 bg-primary text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 text-center text-lg-start mb-3 mb-lg-0">
                <h2 class="display-6 fw-bold mb-2">¿Listo para comenzar?</h2>
                <p class="lead mb-0">Digitaliza tu práctica médica hoy mismo</p>
            </div>
            <div class="col-lg-4 text-center text-lg-end">
                <a asp-controller="Home" asp-action="Contacto" class="btn btn-light btn-lg">
                    <i class="fas fa-envelope me-2"></i> Contáctanos
                </a>
            </div>
        </div>
    </div>
</section>
