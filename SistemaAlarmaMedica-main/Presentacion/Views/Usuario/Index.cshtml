@model UsuarioViewModel
@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Lista de Usuarios</span></h5>
        </div>
    </div>
    <div class="row px-xl-5 mb-1 justify-content-end">
        <div class="col">
            <div class="input-group">
                <input type="text" id="searchText" class="form-control" placeholder="Buscar por Nombre">
                <div class="input-group-append">
                    <span id="searchInput" class="input-group-text bg-transparent text-primary">
                        <i class="fa fa-search"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="col-auto">
            <a class="btn btn-primary px-3" asp-area="" asp-controller="Usuario" asp-action="GestionarUsuario"><i class="fa fa-plus"></i> Nuevo</a>
        </div>
    </div>
    <div class="row px-xl-5">
        <div class="col table-responsive mb-5">
            <div id="searchResults">
                <table id="usuarioTable" class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Contrasena</th>
                            <th>Tipo Usuario</th>
                            <th>Activo</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @foreach (var item in Model.Usuarios)
                        {
                            <tr>
                                <td class="align-middle">@item.Nombre</td>
                                <td class="align-middle">@(new string('*', item.Contrasena?.Length ?? 3))</td>
                                <td class="align-middle">@item.TipoUsuario</td>
                                <td class="align-middle">@((item.Activo ?? false) ? "SI" : "NO")</td>
                                <td class="align-middle">
                                    <button class="btn btn-sm btn-primary btn-modify-usuario" title="Editar" data-usuario-id="@item.UsuarioId"><i class="fas fa-edit"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        var respuestaServidor = "@Model.RespuestaServidor?.IsFailure";
        var mensageServidor = "@Model.RespuestaServidor?.GetErrorsAsString()";

        if (respuestaServidor == "True") {
            showToastMessage(mensageServidor, "error");
        }

        ConfigDataTableGlobal("usuarioTable");

        $("#searchInput").on("click", function () {
            var searchQuery = $("#searchText").val();

            var redirectUrl = "/Usuario/Index/?nombre=" + encodeURIComponent(searchQuery);
            window.location.href = redirectUrl;
        });

        $('.btn-modify-usuario').on('click', function () {
            var usuarioId = $(this).data('usuario-id');
            window.location.href = '/Usuario/GestionarUsuario/?usuarioId=' + usuarioId + '&tipoOperacion=MODIFICAR';
        });
    });
</script>
