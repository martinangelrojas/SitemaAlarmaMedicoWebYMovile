@using Presentacion.Core
@model GestionarMedicoViewModel
@{
    ViewData["Title"] = "Gestión Médico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("GestionarMedico", "Medico", FormMethod.Post, new { id = "agregarMedicoForm" }))
{
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">@Model.TipoOperacion</span></h5>
            </div>
        </div>
        <div class="bg-light p-30 mb-5">

            @if (Model.RespuestaServidor.IsFailure)
            {
                <div class="row">
                    <div class="col-12 form-group">
                        <div class="alert alert-danger text-center" role="alert">
                            <strong>Error:</strong> @Model.RespuestaServidor.GetErrorsAsString()
                        </div>
                    </div>
                </div>
            }

            <div class="row">
                <div class="col-md-6 form-group">
                    <label for="Medico" class="font-weight-bold">Codigo:</label>
                    @Html.TextBoxFor(
                             model => model.Medico.MedicoId,
                             new
                             {
                                 @class = "form-control",
                                 @readonly = Model.TipoOperacion == TipoOperacion.MODIFICAR ? "readonly" : null
                             })
                    @Html.ValidationMessageFor(model => model.Medico.MedicoId, "", new { @class = "help-block text-danger" })
                </div>

                <div class="col-md-6 form-group">
                    <label for="Apellido" class="font-weight-bold">Apellido:</label>
                    @Html.TextBoxFor(model => model.Medico.Apellido, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Medico.Apellido, "", new { @class = "help-block text-danger" })
                </div>

                <div class="col-md-6 form-group">
                    <label for="Nombre" class="font-weight-bold">Nombre:</label>
                    @Html.TextBoxFor(model => model.Medico.Nombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Medico.Nombre, "", new { @class = "help-block text-danger" })
                </div>

                <div class="col-md-6 form-group">
                    <label for="Matricula" class="font-weight-bold">Matricula:</label>
                    @Html.TextBoxFor(
                             model => model.Medico.Matricula,
                             Model.TipoOperacion == TipoOperacion.MODIFICAR
                             ? new { @class = "form-control", @readonly = "readonly" }
                             : new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Medico.Matricula, "", new { @class = "help-block text-danger" })
                </div>

                <div class="col-md-6 form-group">
                    <label for="EspecialidadId" class="font-weight-bold">Especialidad:</label>
                    @Html.DropDownListFor(
                             model => model.Medico.EspecialidadId,
                             new SelectList(Model.Especialidades, "EspecialidadId", "Nombre"),
                             "-- Seleccionar Especialidad --",
                             new
                             {
                                 @class = "form-control",
                                 @readonly = Model.TipoOperacion == TipoOperacion.MODIFICAR ? "readonly" : null
                             })
                    @Html.ValidationMessageFor(model => model.Medico.EspecialidadId, "", new { @class = "help-block text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 form-group">
                    @Html.HiddenFor(model => Model.Medico.MedicoId)
                    @Html.HiddenFor(model => Model.TipoOperacion)
                    <button class="btn btn-primary py-2 px-4 mr-2" type="submit" id="sendMessageButton"> Guardar </button>
                    <a class="btn btn-secondary py-2 px-4 mr-2" asp-area="" asp-controller="Medico" asp-action="Index">Atrás</a>
                </div>
            </div>
        </div>
    </div>
}
