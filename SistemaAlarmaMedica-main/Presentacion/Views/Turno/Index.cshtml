@model TurnoViewModel
@{
    ViewData["Title"] = "Turnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Mis Turnos</span></h5>
        </div>
    </div>
    <div class="row px-xl-5 mb-1 justify-content-end">
        <div class="col-auto">
            <a class="btn btn-primary px-3" asp-area="" asp-controller="Turno" asp-action="GestionarTurno"><i class="fa fa-plus"></i> Nuevo Turno</a>
        </div>
    </div>
    <div class="row px-xl-5">
        <div class="col table-responsive mb-5">
            <div id="searchResults">
                <table id="turnoTable" class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Médico</th>
                            <th>Especialidad</th>
                            <th>Fecha Turno</th>
                            <th>Paciente</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @foreach (var item in Model.Turnos)
                        {
                            <tr>
                                <td class="align-middle">@item.Medico?.Nombre @item.Medico?.Apellido</td>
                                <td class="align-middle">@item.Medico?.Especialidad?.Nombre</td>
                                <td class="align-middle">@item.FechaTurno?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="align-middle">@item.Paciente?.Nombre @item.Paciente?.Apellido</td>
                                <td class="align-middle">
                                    <button class="btn btn-sm btn-primary btn-modify-turno" title="Editar" data-turno-id="@item.TurnoId"><i class="fas fa-edit"></i></button>
                                    <button class="btn btn-sm btn-danger btn-delete-turno" title="Eliminar" data-turno-id="@item.TurnoId" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmar Eliminación</h5>
                </div>
                <div class="modal-body">
                    ¿Está seguro de que desea cancelar este turno? Esta acción no se puede deshacer.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form id="deleteForm" method="post" action="/Turno/Eliminar">
                        <input type="hidden" name="turnoId" id="turnoIdToDelete" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        ConfigDataTableGlobal("turnoTable");

        $('.btn-modify-turno').on('click', function () {
            var turnoId = $(this).data('turno-id');
            window.location.href = '/Turno/GestionarTurno/?turnoId=' + turnoId + '&tipoOperacion=MODIFICAR';
        });

        $(".btn-delete-turno").on("click", function () {
            var turnoId = $(this).data("turno-id");
            $("#turnoIdToDelete").val(turnoId);
            $("#deleteModal").modal("show");
        });

        $(".btn-secondary[data-bs-dismiss='modal']").on("click", function() {
            $("#deleteModal").modal("hide");
        });

        @if (Model.RespuestaServidor != null && Model.RespuestaServidor.IsFailure)
        {
            <text>
                showErrorModal(@Html.Raw(Json.Serialize(Model.RespuestaServidor.GetErrorsAsString())));
            </text>
        }
    });
</script>
